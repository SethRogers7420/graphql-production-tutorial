{
  "name": "graphql-production-tutorial",
  "packageManager": "yarn@3.3.1",
  "scripts": {
    "dev": "yarn run prepare & yarn run generate:graphql && concurrently --prefix-colors cyan.bold,magenta.bold,red.bold --kill-others-on-fail -n graphql,server,typecheck \"yarn run generate:graphql:watch\" \"yarn run start:dev\" \"yarn run typecheck:watch\"",
    "start:dev": "dotenv -c development -- nodemon --watch './src/**/*.ts' --watch 'tsconfig.json' --exec 'node --inspect=9230 -r ts-node/register -r tsconfig-paths/register' ./src/index.ts",
    "build": "yarn run generate:graphql && tsc && rimraf ./**/*.ts",
    "lint": "eslint . --ext .js,.ts --cache",
    "generate:graphql:watch": "yarn run generate:graphql --watch",
    "generate:graphql": "graphql-codegen --config src/services/graphql/codegen.ts",
    "prepare": "husky install",
    "typecheck": "tsc --pretty --noEmit",
    "typecheck:watch": "tsc --pretty --noEmit --watch --preserveWatchOutput",
    "prettier": "prettier --write .",
    "test": "yarn jest",
    "test:coverage": "yarn jest --coverage"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.14",
    "@graphql-tools/load": "^7.8.9",
    "@graphql-tools/schema": "^9.0.13",
    "apollo-server": "^3.11.1",
    "graphql": "^16.6.0"
  },
  "main": "src/index.ts",
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.27",
    "@swc/helpers": "^0.4.14",
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "concurrently": "^7.6.0",
    "jest": "^29.3.1",
    "regenerator-runtime": "^0.13.11",
    "typescript": "^4.9.4"
  }
}
