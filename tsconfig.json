{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "target": "es2021",
    "lib": ["es2021"],
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "exclude": ["dist-ts", "test", "iac"],
  // Use swc with ts-node
  "ts-node": {
    "swc": true
  }
}
